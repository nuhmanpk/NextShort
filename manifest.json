{
  "manifest_version": 3,
  "name": "NextShort - Auto Scroll Reels & Shorts",
  "version": "1.0.0",
  "description": "Automatically scrolls to the next YouTube Short or Instagram Reel when the current one finishes.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.instagram.com/*"
      ],
      "js": [
        "src/content/loader.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/*.js",
        "src/utils/*.js"
      ],
      "matches": [
        "*://*.youtube.com/*",
        "*://*.instagram.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}